{
    "width": 1000,
    "height": 50,
    "padding": {"top": 10, "left": 30, "bottom": 20, "right": 10},

    "data": [],

    "signals": [
        {
            "name": "tooltip",
            "init": {},
            "streams": [
                {"type": "rect:mouseover", "expr": "datum"},
                {"type": "rect:mouseout", "expr": "{}"}
            ]
        }
    ],

    "predicates": [
        {
            "name": "tooltip", "type": "==",
            "operands": [{"signal": "tooltip._id"}, {"arg": "id"}]
        }
    ],

    "scales": [
        { "name": "xscale", "range": "width", "domain": [0, 249250620]},
        { "name": "yscale", "range": "height", "nice": true, "domain": [0, 150] },
        { "name": "c", "type": "linear", "domain": {"data": "table", "field": "score"}, "range": ["#FFFFFF", "#000000"] }
    ],

    "axes": [
        { "type": "x", "scale": "xscale", "format": "s", "ticks": 5 },
        { "type": "y", "scale": "yscale" }
    ],

    "marks": [
        {
            "type": "rect",
            "from": {"data": "table"},
            "properties": {
                "update": {
                    "x": {"scale": "xscale", "field": "start"},
                    "width": {"scale": "xscale", "field": "end"},
                    "y": {"scale": "yscale", "value": "200"},
                    "y2": {"scale": "yscale", "value": "0"},
                    "fill": {"scale": "c", "field": "score"}
                }
            }
        }
    ]
}
